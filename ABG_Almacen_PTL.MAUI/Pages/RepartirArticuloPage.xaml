<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABG_Almacen_PTL.MAUI.Pages.RepartirArticuloPage"
             Title="Repartir Artículo">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Título -->
            <Label Text="REPARTIR ARTÍCULO"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource Primary}" />

            <!-- Instrucciones -->
            <Frame BorderColor="{DynamicResource Primary}" Padding="10" CornerRadius="5">
                <Label Text="Escanear código de artículo o EAN13"
                       HorizontalTextAlignment="Center"
                       FontSize="14" />
            </Frame>

            <!-- Campo de lectura -->
            <Entry x:Name="txtLecturaCodigo"
                   Placeholder="Escanear código..."
                   FontSize="18"
                   MaxLength="36"
                   Completed="OnCodigoCompleted"
                   Focused="OnEntryFocused"
                   Unfocused="OnEntryUnfocused" />

            <!-- Frame de datos del artículo -->
            <Frame BorderColor="Gray" Padding="15" CornerRadius="5">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Información del Artículo" FontAttributes="Bold" HorizontalOptions="Center" FontSize="16" />
                    
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" RowSpacing="10" ColumnSpacing="10">
                        
                        <!-- Artículo -->
                        <Label Text="Artículo:" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" />
                        <Label x:Name="lblArticulo" Grid.Row="0" Grid.Column="1" BackgroundColor="White" Padding="5" />

                        <!-- Nombre -->
                        <Label Text="Nombre:" Grid.Row="1" Grid.Column="0" FontAttributes="Bold" />
                        <Label x:Name="lblNombreArticulo" Grid.Row="1" Grid.Column="1" BackgroundColor="White" Padding="5" />

                        <!-- EAN13 -->
                        <Label Text="EAN13:" Grid.Row="2" Grid.Column="0" FontAttributes="Bold" />
                        <Label x:Name="lblEAN13" Grid.Row="2" Grid.Column="1" BackgroundColor="White" Padding="5" />

                        <!-- Peso / Volumen -->
                        <Label Text="Peso:" Grid.Row="3" Grid.Column="0" FontAttributes="Bold" />
                        <HorizontalStackLayout Grid.Row="3" Grid.Column="1" Spacing="10">
                            <Label x:Name="lblPeso" BackgroundColor="White" Padding="5" WidthRequest="80" />
                            <Label Text="Vol:" FontAttributes="Bold" />
                            <Label x:Name="lblVolumen" BackgroundColor="White" Padding="5" WidthRequest="80" />
                        </HorizontalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Selección de BAC destino -->
            <Frame BorderColor="Gray" Padding="15" CornerRadius="5">
                <VerticalStackLayout Spacing="10">
                    <Label Text="BAC Destino" FontAttributes="Bold" HorizontalOptions="Center" />
                    
                    <Entry x:Name="txtBAC"
                           Placeholder="Escanear BAC destino..."
                           FontSize="16"
                           MaxLength="12"
                           Completed="OnBACCompleted" />

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                        <Label Text="BAC:" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" />
                        <Label x:Name="lblBACDestino" Grid.Row="0" Grid.Column="1" BackgroundColor="White" Padding="5" />
                        
                        <Label Text="Grupo/Tab:" Grid.Row="1" Grid.Column="0" FontAttributes="Bold" />
                        <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="5">
                            <Label x:Name="lblGrupoBAC" BackgroundColor="White" Padding="5" WidthRequest="50" />
                            <Label Text="/" />
                            <Label x:Name="lblTablillaBAC" BackgroundColor="White" Padding="5" WidthRequest="50" />
                        </HorizontalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Cantidad a repartir -->
            <Frame BorderColor="Gray" Padding="15" CornerRadius="5">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Cantidad a Repartir" FontAttributes="Bold" HorizontalOptions="Center" />
                    
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Button Text="-" Clicked="OnRestarClicked" WidthRequest="50" />
                        <Entry x:Name="txtCantidad"
                               Text="1"
                               Keyboard="Numeric"
                               WidthRequest="100"
                               HorizontalTextAlignment="Center"
                               FontSize="20" />
                        <Button Text="+" Clicked="OnSumarClicked" WidthRequest="50" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Botones de acción -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="REPARTIR"
                        Clicked="OnRepartirClicked"
                        BackgroundColor="{DynamicResource Primary}"
                        WidthRequest="150" />
                <Button Text="SALIR"
                        Clicked="OnSalirClicked"
                        BackgroundColor="{DynamicResource Secondary}"
                        WidthRequest="120" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
